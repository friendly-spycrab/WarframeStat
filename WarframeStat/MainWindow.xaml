<Window x:Class="WarframeStat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarframeStat"
        mc:Ignorable="d"
        Title="Warframe Stats" Height="680" Width="1240" WindowStyle="ToolWindow" >
    <Window.Background>
        <ImageBrush ImageSource="http://i.imgur.com/mQhBT8z.jpg"></ImageBrush>
    </Window.Background>
    <Grid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="113" Margin="20,10,0,0" VerticalAlignment="Top" Width="124" Opacity="0.65"/>
        <Label x:Name="DayNight" Content="Day/Night" HorizontalAlignment="Left" Margin="20,58,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="124"/>
        <Label x:Name="TimeLeft" Content="Time Left" HorizontalAlignment="Left" Margin="20,84,0,0" VerticalAlignment="Top" HorizontalContentAlignment="Center" Width="124"/>
        <Label x:Name="label2" Content="Cetus Time" HorizontalAlignment="Left" Margin="20,17,0,0" VerticalAlignment="Top" FontSize="20px" Width="124" HorizontalContentAlignment="Center"/>
        <Grid  Margin="0,17,10,0" HorizontalAlignment="Right" Width="186" Height="254" VerticalAlignment="Top">
            <Rectangle Fill="#FFF4F4F5" Margin="-1,0,0,-111" Opacity="0.65"/>
            <Label x:Name="label2_Copy" Content="Sorties" Margin="-1,21,0,0" VerticalAlignment="Top" FontSize="20px" HorizontalContentAlignment="Center"/>
            <TextBlock TextWrapping="Wrap" x:Name="misType1"  Text="Mission Type 1" Margin="54,81,53,0"  Height="26" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16"/>
            <TextBlock TextWrapping="Wrap" x:Name="misType2" Text="Mission Type 2" Margin="43,164,44,0" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="16" Width="99"/>
            <TextBlock TextWrapping="Wrap" x:Name="misType3"  Text="Mission Type 3" Margin="43,255,44,-44" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Width="99"/>
            <TextBlock TextWrapping="Wrap" x:Name="misMod3"   Text="Mission Modifier 3" Margin="43,293,44,-111" HorizontalAlignment="Center" Height="72" VerticalAlignment="Top"/>
            <TextBlock TextWrapping="Wrap" x:Name="misMod1"   Text="Mission Modifier 1" Margin="43,107,44,0" HorizontalAlignment="Center" Height="57" VerticalAlignment="Top" />
            <TextBlock TextWrapping="Wrap" x:Name="misMod2"   Text="Mission Modifier 2" Margin="43,205,44,-1" HorizontalAlignment="Center" Height="50" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</Window>
